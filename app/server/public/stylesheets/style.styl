@import 'nib'

@import url(http://fonts.googleapis.com/css?family=Lemon)

/**
 * 	variables
 */

$borderColor = #660

/**
 * 	styles
 */

global-reset()

body
  font-family arial
  font-size 1em
  #footer
    display block
    width 100%
    font-size 10px
    position absolute
    bottom 0
    text-align center
  #questions
    ol
      width 100%
      li
        border 2px solid $borderColor
        margin 5px
        padding 10px
        min-height 55px
        p
          font-family 'Lemon', cursive
          font-size 1.5em
        .options
          float right
          .like
            display block
            text-indent -9999px
            background-image url('/images/like.svg')
            background-repeat no-repeat
            background-size 40px 40px
            height 45px
            width 45px
            white-space nowrap
            &:hover
              background-size 45px 45px
  #question
    width 100%
    position absolute
    bottom 10
    height 140px
    margin 5px
    textarea
      border 1px solid darken($borderColor, 25)
      width 99%
      height 100px
    .buttons
      float left
    .count
      float right
      font-size .75em
      margin-top 5px
      margin-right 15px
